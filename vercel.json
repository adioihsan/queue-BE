{
  "version": 2,
  "builds": [
    {
      "src": "src/app.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["dist/**"] },
      "buildCommand": "prisma generate --schema src/model/schema.prisma && vercel build"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/app.js"
    }
  ]
}
